:root {
    --color-bg: rgba(0, 0, 0, 0.75);
    --color-yellow: rgb(255, 208, 0);
}

.button {
    -unity-font-style: bold;
    color: white;
    background-color: rgb(50, 50, 50);
    border-color: black;
    border-radius: 10px;
    border-width: 1px;
}

.button--big {
    width: 520px;
    height: 150px;
    font-size: 70px;
    border-radius: 20px;
    border-width: 3px;
    margin: 10px;
}

.button:hover, .button:focus {
    background-color: rgb(128, 128, 128);
}

.button:active {
    background-color: rgb(80, 80, 80);
}
